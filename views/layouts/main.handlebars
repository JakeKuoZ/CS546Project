<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{title}}</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/main.css">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <link rel="icon" href="/public/icons/favicon-32x32.png" type="image/x-icon">
    <style>
    
        .dark-mode {
            color: white;
            background-color: black;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 min-vh-100 bg-light" id="navContainer">
                    <a href="#" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-decoration-none link-dark">
                        <img src="/public/icons/icon_transparent.png" class="img-fluid rounded-top" alt="application icon" width="150px" height="150px">
                    </a> 
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="/static/homepage.html" class="nav-link align-middle px-0 link-dark">
                                <i class="fs-4 bi-house-fill"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li> 
                        <li>
                            <a href="/search" class="nav-link px-0 align-middle link-dark">
                                <i class="fs-4 bi-search"></i> <span class="ms-1 d-none d-sm-inline">Search</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link px-0 align-middle link-dark">
                                <i class="fs-4 bi-pencil-fill"></i> <span class="ms-1 d-none d-sm-inline">My Reviews</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link px-0 align-middle link-dark">
                                <i class="fs-4 bi-tools"></i> <span class="ms-1 d-none d-sm-inline">My Service</span>
                            </a>
                        </li>  
                        <li>
                            <a href="#" class="nav-link px-0 align-middle link-dark">
                                <i class="fs-4 bi-save-fill"></i> <span class="ms-1 d-none d-sm-inline">Saved Services</span>
                            </a>
                        </li> 
                        <li>
                            <a href="/service" class="nav-link px-0 align-middle link-dark">
                                <i class="fs-4 bi-star-fill"></i> <span class="ms-1 d-none d-sm-inline">Favourite</span>
                            </a>
                        </li>
                    </ul>
                    <hr> 
                    <ul class="nav nav-pills align-items-center align-items-sm-start mb-3">
                        <li>
                            <a href="/logout" class="nav-link px-0 align-middle link-dark">
                                <i class="fs-4 bi-box-arrow-left"></i> <span class="ms-1 d-none d-sm-inline">Logout</span>
                            </a>
                        </li> 
                    </ul>
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="d-none d-sm-inline mx-1">Parth</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                        </ul>
                    </div>              
                </div>
            </div>
            <div class="col py-3">
                {{{body}}}
            </div>
        </div>
    </div>
    
    <script>
        let uiMode = localStorage.getItem("ui-mode")
        if(uiMode === "dark") {
            performDarkMode()    
        } else {
            performLightMode()
        }
        function toggleDarkMode(){
            let darkMode = localStorage.getItem("ui-mode")
            if(darkMode === "dark") {
                performLightMode()
                localStorage.setItem("ui-mode", "light")
            } else {
                performDarkMode()
                localStorage.setItem("ui-mode", "dark")
            }
        }

        function performDarkMode(){
            document.getElementById("navContainer").classList.toggle("bg-dark")
            let elements = document.getElementsByClassName("nav-link")
            for(let i = 0; i < elements.length; i++) {
                elements[i].classList.add("text-white")
                elements[i].classList.remove("link-dark")
            }
            document.body.classList.add("dark-mode")
        }

        function performLightMode() {
            document.getElementById("navContainer").classList.remove("bg-dark")
            let elements = document.getElementsByClassName("nav-link")
            for(let i = 0; i < elements.length; i++) {
                elements[i].classList.remove("text-white")
                elements[i].classList.add("link-dark")
            }
            document.body.classList.remove("dark-mode")
        }
    </script>
</body>
</html>